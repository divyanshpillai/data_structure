class Solution {
public:
    int maxSubArray(vector<int>& nums) {
        int sum = 0;
        int maxSum = INT_MIN;

        if(nums.size() == 1){
            return nums[0];
        }

        for(int i = 0; i < nums.size(); i++){
            if(sum < 0){
                sum = 0;
            }
            sum += nums[i];
            maxSum = max(maxSum, sum);
        }
        return maxSum;
    }
};
