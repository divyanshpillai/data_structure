long long connectRopes(int* arr, int n)
{
    priority_queue <long long, vector<long long>, greater<long long>> pq;
    long long cost = 0;

    for(int i = 0; i < n; i++){
        pq.push(arr[i]);
    }

    while(pq.size() > 1){
        long long a = pq.top();
        pq.pop();

        long long b = pq.top();
        pq.pop();

        long long sum = a+b;

        cost += sum;

        pq.push(sum);
    }

    return cost;
}
